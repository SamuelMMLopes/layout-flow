{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}